+alias org.eolang.digits.int8
+alias org.eolang.hamcrest.assert-that
+architect yegor256@gmail.com
+home https://github.com/objectionary/eo
+junit
+package org.eolang.digits
+version 0.0.0

[] > brings-carry
  assert-that > @
    carry.
      plus.
        int8 FF-
        int8 FF-
    $.equal-to
      01-

[] > no-carry-for-low-numbers
  assert-that > @
    carry.
      plus.
        int8 02-
        int8 08-
    $.equal-to
      00-

[] > subtracts
  assert-that > @
    minus.
      int8 05-
      int8 02-
    $.equal-to
      03-

[] > adds
  assert-that > @
    plus.
      int8 05-
      int8 02-
    $.equal-to
      07-

[] > gt
  assert-that > @
    gt.
      int8 00-
      minus.
        int8 00-
        int8 01-
    $.equal-to
      TRUE

[] > gte-greater
  assert-that > @
    gte.
      int8 10-
      int8 05-
    $.equal-to
      TRUE

[] > gte-equal
  assert-that > @
    gte.
      int8 10-
      int8 10-
    $.equal-to
      TRUE
